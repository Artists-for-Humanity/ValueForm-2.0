{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "sanity-studio/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server.js" },
    { "source": "/admin/static/(.*)", "destination": "/dist/sanity-studio/dist/static/$1" },
    { "source": "/admin/(.*)", "destination": "/dist/index.html" },
    { "source": "/static/(.*)", "destination": "/static/$1" },
    { "source": "/sanity-studio/(.*)", "destination": "/sanity-studio/$1" },
    { "source": "/", "destination": "/dist/sanity-studio/dist/index.html" },
    { "source": "/(.*)", "destination": "/dist/sanity-studio/dist/index.html" }
  ]
}
