{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "sanity-studio/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "redirects": [
    { "source": "/api/(.*)", "destination": "/api/server.js", "permanent": false},
    { "source": "/admin/static/(.*)", "destination": "/dist/sanity-studio/dist/static/$1", "permanent": false },
    { "source": "/admin/(.*)", "destination": "/dist/index.html", "permanent": false },
    { "source": "/static/(.*)", "destination": "/static/$1", "permanent": false },
    { "source": "/sanity-studio/(.*)", "destination": "/sanity-studio/$1", "permanent": false },
    { "source": "/", "destination": "/dist/sanity-studio/dist/index.html", "permanent": false },
    { "source": "/(.*)", "destination": "/dist/sanity-studio/dist/index.html", "permanent": false }
  ]
}
